<p id="notice"><%= notice %></p>

<div class="container">

        <div class="row">
            <div class="col-lg-12">
                <h1>Upcoming events</h1>
                <table>
  <thead>
  


    <tr>
		<th></th>
	  <th>Event</th>
      <th>Artist</th>
      <th>Venue</th>
      <th>Date</th>
      <th>Start time</th>
      <th>Tickets remaining</th>
	  <th>Download Artists Song</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gigs.each do |gig| %>
      <tr>
		<td><%= image_tag(gig.image,:size=>"80x50")%></td>
		<td><%= gig.gig_name %></td>
        <td><%= gig.artist %></td>
        <td><%= gig.venue.name %></td>
        <td><%= gig.date %></td>
        <td><%= gig.start_time %></td>
        <td><%= gig.tickets_remaining %></td>
		<td><%= link_to "Download Song", gig.attachment_url %></td>
        <td><%= link_to 'Show/Buy Tickets', gig %></td>
        <td><%= link_to 'Edit', edit_gig_path(gig) %></td>
        <td><%= link_to 'Destroy', gig, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gig', new_gig_path %>
