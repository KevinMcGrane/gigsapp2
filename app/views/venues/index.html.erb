<p id="notice"><%= notice %></p>

<div class="container">

        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>Venues</h1>
               <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Capacity</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.location %></td>
        <td><%= venue.capacity %></td>
        <td><%= image_tag(venue.image,:size=>"80x50")%></td>
        <td><%= link_to 'View/Post Comment', venue %></td>
        <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
        <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
	
	

	
  </tbody>
</table>

<br>

<%= link_to 'New Venue', new_venue_path %>

            </div>
        </div>
        <!-- /.row -->

    </div>

